mode "Display Configuration" {
    bindsym 1 exec exec xrandr --output LVDS1 --mode 1280x800; mode "default"
    bindsym 3 exec exec xrandr --output VGA1 --mode 1920x1200; mode "default"
    bindsym 2 exec exec xrandr --output LVDS1 --mode 1280x800; exec xrandr --output VGA1 --primary --mode 1920x1200 --left-of LVDS1; mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+P mode "Display Configuration"

